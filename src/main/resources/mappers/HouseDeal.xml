<?xml version="1.0" encoding="UTF-8"?>
<!-- mappers/HouseDeal.xml -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.model.dao.HouseDao">
	<select id="searchByNo" parameterType="int" resultType="HouseDeal">
		select 
			* 
		from 
			housedeal 
		where 
			no = #{no}
	</select>
	
	<select id="getTotalCount" resultType="int">
		select 
			count(no) 
		from 
			housedeal 
		where 
			1 = 1 
		order 
			by no desc
	</select>
	<select id="searchAll" parameterType="Pair" resultType="HouseDeal">
		select * 
		from housedeal 
		where 1 = 1 
		limit #{x} , #{y} 
	</select>
	<select id="detaillist" parameterType="Search2Dto" resultType="HouseDeal">
		select 
			* 
		from 
			housedeal 
		where 
			1 = 1 and type = #{type}  and 
			<if test='searchType.equals("all")' >
				 dong like CONCAT('%',#{searchWord},'%') or 
				 AptName like CONCAT('%',#{searchWord},'%') 
			</if>
			<if test='searchType.equals("dong")'>
			 dong like CONCAT('%',#{searchWord},'%')
			</if>
			<if test='searchType.equals("AptName")'>
			 AptName like CONCAT('%',#{searchWord},'%')
			</if>
			
			
	</select>
</mapper>    